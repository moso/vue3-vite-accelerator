{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "types": ["vite/client", "vite-plugin-pages/client"],
        "lib": ["DOM", "ESNext"],
        "baseUrl": ".",
    },
    "exclude": ["dist", "node_modules"]
}
